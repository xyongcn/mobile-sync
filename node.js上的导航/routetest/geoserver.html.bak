<html >
  <head>
    <style  type="text/css">
        #map {
            width: 800px;
            height: 434px;
            border: 1px solid black;
        }
    </style>
<script  src="http://localhost:8080/geoserver/openlayers/OpenLayers.js"  type="text/javascript"></script>     
 <script  type="text/javascript">
  function init(){
        var bounds = new OpenLayers.Bounds(
                    115.432318, 39.429787,
                    117.533264, 41.059143
                );
                var options = {
                    controls: [],
                    maxExtent: bounds,
                    maxResolution: 0.0052055120468164,
                    projection: "EPSG:4326",
                    units: 'degrees'
                };
                var format = 'image/png';
          var map = new OpenLayers.Map('map',options);          
          OpenLayers.IMAGE_RELOAD_ATTEMPTS = 5;
        
        var id1 = document.getElementById("id1").value;
        var id2 = document.getElementById("id2").value;
          var basemap = new OpenLayers.Layer.WMS(
                    "pgrouting:beijingpbf", 
                    "http://localhost:8080/geoserver/pgrouting/wms",
                    {
                        LAYERS: 'pgrouting:beijingpbf',
                    }
                );
            
         var params = {
        	 LAYERS: 'pgrouting:test4',
        	 FORMAT: 'image/png',
        	 transparent: true ,
        	 };
       var  viewparams = [
        'id1:'+id1,  'id2:'+id2
        ];
        params.viewparams = viewparams.join(';');
        
        var  routinglayer = new OpenLayers.Layer.WMS(
        	 "pgrouting:test4",
                    "http://localhost:8080/geoserver/pgrouting/wms",
                    params,
                    {opacity:1});
          var routeLayer = new OpenLayers.Layer.Vector("routeLayer");
            map.addLayers([basemap,routinglayer]);
            
            
            
            map.zoomToMaxExtent();
        }
    </script>
</head>
  <body>
      <input id="id1" type = "text" value="10">   </input>
      <input id="id2" type = "text" value="30">   </input>
      <button type="button" onclick="javascript:init()">addlayer</button>
      <div id="map" ></div>
  </body>
</html>

   